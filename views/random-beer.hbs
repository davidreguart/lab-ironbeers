<div class="detailProductPage">
    <div class="detailProduct">
        {{#each reponseFromAPI as |beer|}}
            <div class="detailImg">
                <img src="{{beer.image_url}}" alt="{{beer.name}}">
            </div>
            <div class="detailText">
                <h1>{{beer.name}}</h1>
                <h3>{{beer.tagline}}</h3>
                <p>{{beer.description}}</p>
                <h2>Food Pairing</h2>
                <ul>
                    {{#each beer.food_pairing as |food|}}
                        <li>{{food}}</li>
                    {{/each}}
                </ul>
                <p>{{beer.brewers_tips}}</p>
            </div>
        {{/each}}
    </div>
</div>